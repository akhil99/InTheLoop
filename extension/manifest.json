{
	"manifest_version" : 2,
	"name": "In The Loop",
  	"version": "2.1",

  	"description": "A suite of features that improve the SchoolLoop interface",
  	"icons": { "19": "icons/icon19.png" },
  	"background": {
    	"persistent": false,
		"scripts": ["src/scripts/autoRefresh.js"]
  	},

	"options_page": "src/options/options.html",

	"content_scripts":[
		{
			"matches":["https://montavista.schoolloop.com/", "https://montavista.schoolloop.com/portal/student_home*", "https://montavista.schoolloop.com/news/*", "https://montavista.schoolloop.com/progress_report/*"],
			"js": ["lib/jquery-2.1.3.min.js", "src/scripts/themer.js"],
			"run_at":"document_end"
		},
		{
			"matches": [
				"https://montavista.schoolloop.com/progress_report/*"
			],
			"css": [
				"styles/buttonStyles.css"
			],
			"js": [
				"src/scripts/grades.js",
				"lib/jquery-2.1.3.min.js"
			]
		}
	],
	"permissions": ["tabs","storage", "alarms"],
	"browser_action": {
		"default_title": "In The Loop",
		"default_icon": "icons/icon19.png",
		"default_popup": "src/browser_action/browser_action.html"
	}
}
