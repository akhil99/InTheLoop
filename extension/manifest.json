{
	"manifest_version" : 2,
	"name": "In The Loop",
  	"version": "2.1",
  	"description": "A suite of features that improve the SchoolLoop interface",
  	"icons": { "19": "icons/icon19.png" },
    
  	"permissions": [
        "tabs",
        "storage",
        "alarms",
        "*://*.schoolloop.com/"
    ],
    
    "background": {
    	"persistent": false,
		"scripts": ["src/scripts/autoRefresh.js"]
  	},

	"options_page": "src/options/options.html",

	"content_scripts":[
		{
			"matches":["*://*.schoolloop.com/*", "http://*.schoolloop.com/*"],
			"js": ["lib/jquery-2.1.3.min.js", "src/scripts/ITLUtil.js"],
			"run_at":"document_end"
		}
	],
    
	"browser_action": {
		"default_title": "In The Loop",
		"default_icon": "icons/icon19.png",
		"default_popup": "src/browser_action/browser_action.html"
	}
}
